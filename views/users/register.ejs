<% layout('./layout/boilerplate.ejs') %>

<div class="container d-flex justify-content-center align-items-center mb-5" >
    <div class="row">
        <div class="" style="width: 100%;">
            <div class="card shadow">
                <img src="https://media.istockphoto.com/id/1138169629/photo/wild-camping.jpg?s=612x612&w=0&k=20&c=oysDJqBq0AR0cJmmMOGDtxVyW1xvbJs6OTT7YyzCDKk="
                    alt="" class="card-img-top" />
                <div class="card-body">
                    <h5 class="card-title">Register</h5>
                    <form action="/register" method="POST" class="validated-form" novalidate>
                        <div class="mb-3">
                            <label class="form-label" for="username">Username :</label>
                            <input class="form-control" type="text" name="username" id="username" required autofocus>
                            <div class="valid-feedback">
                                <span>ok! ( 有效 ) </span>
                            </div>
                            <div class="invalid-feedback">
                                <span>Please provide a User Name.<br>請建立使用者名稱</span>
                            </div>
                        </div>
                
                        <div class="mb-3">
                            <label class="form-label" for="email">Email :</label>
                            <input class="form-control" type="email" name="email" id="email" required>
                            <div class="valid-feedback">
                                <span>ok! ( 有效 ) </span>
                            </div>
                            <div class="invalid-feedback">
                                <span>Please provide an Email.<br>請提供電子信箱</span>
                            </div>
                        </div>
                
                        <div class="mb-3">
                            <label class="form-label" for="password">Password :</label>
                            <input class="form-control" type="password" name="password" id="password" required>
                            <div class="valid-feedback">
                                <span>ok! ( 有效 ) </span>
                            </div>
                            <div class="invalid-feedback">
                                <span>Please provide an Password.<br>請新增密碼</span>
                            </div>
                        </div>
                        <button class="btn btn-warning" style="width:100% ; height: 50px;">Register</button>
                    </form>
                </div>
                
            </div>
        </div>
    </div>

</div>