<% layout('./layout/boilerplate.ejs') %>
    <div class="row">
        <h1 class="text-center">New Campground</h1>
        <div class="col-6 offset-3">
            <form action="/campgrounds" method="POST" novalidate class="validated-form" enctype="multipart/form-data">
                <div class="mb-3">
                    <label class="form-label" for="title">campground name : </label>
                    <input class="form-control" type="text" name="campground[title]" id="title" required>
                    <div class="valid-feedback">
                        <span>ok! ( 有效 ) </span>
                    </div>
                    <div class="invalid-feedback">
                        <span>Please type the campground name.<br>請輸入宿營地名稱</span>
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="location">city : </label>
                    <input class="form-control" type="text" name="campground[location]" id="location" required>
                    <div class="valid-feedback">
                        <span>ok! ( 有效 ) </span>
                    </div>
                    <div class="invalid-feedback">
                        <span>Please provide a valid city.<br>請輸入有效的城市名稱</span>
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="price">Campground Price</label>
                    <div class="input-group">
                        <span class="input-group-text" id="price-label">$</span>
                        <input type="text" id="price" class="form-control" placeholder="0.00" name="campground[price]"
                            aria-describedby="price-label" required>
                        <div class="valid-feedback">
                            <span>ok! ( 有效 ) </span>
                        </div>
                        <div class="invalid-feedback">
                            <span>Please select a valid price. <br> 請輸入有效的價格</span>
                        </div>
                    </div>

                </div>

                <div class="mb-3">
                    <label  class="form-label" for="description">Description</label>
                    <textarea style="resize:none; min-height:200px" class="form-control " type="text" name="campground[description]" id="description"
                        required></textarea>
                    <div class="valid-feedback">
                        <span>ok! ( 有效 ) </span>
                    </div>
                    <div class="invalid-feedback">
                        <span>Please provide description.<br>請輸入營地介紹</span>
                    </div>
                </div>
                <div class="mb-3">
                    <label for="image" class="form-label">Add Images: </label>
                    <div>
                        <input class="form-control" type="file" name="image" id="image" multiple>
                    </div>  
                    <div id="file-upload-filename"></div>
                </div>
                <div class="mb-3">
                    <button class="btn btn-info">Add Campground</button>
                </div>
            </form>
            <footer>
                <a href="/campgrounds">All Campgrounds</a>
            </footer>
        </div>
    </div>

    