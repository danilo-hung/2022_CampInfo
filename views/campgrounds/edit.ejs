<% layout('./layout/boilerplate.ejs') %>

    <div class="row">
        <div class="col-6 offset-3">
            <div class="card shadow mb-5"> 
                <div class="card-body"> 
                    <h2>Edit Campground - <span class="fw-bold text-warning"><%= campground.title %></span></h1>

                    <form action="/campgrounds/<%= campground._id %>?_method=PATCH"" method="POST" novalidate class="validated-form" enctype="multipart/form-data">
                        <div class="mb-3">
                            <label class="form-label" for="title">campground name : </label>
                            <input class="form-control" type="text" name="campground[title]" id="title" value="<%= campground.title %>" required>
                            <div class="valid-feedback">
                                <span>ok! ( 有效 ) </span>
                            </div>
                            <div class="invalid-feedback">
                                <span>Please type the campground name.<br>請輸入宿營地名稱</span>
                            </div>
                        </div>
                        <div class="mb-3">
                            <label class="form-label" for="location">city : </label>
                            <input class="form-control" type="text" name="campground[location]" id="location" value="<%= campground.location %>" required>
                            <div class="valid-feedback">
                                <span>ok! ( 有效 ) </span>
                            </div>
                            <div class="invalid-feedback">
                                <span>Please provide a valid city.<br>請輸入有效的城市名稱</span>
                            </div>
                        </div>
                        <div class="mb-3">
                            <label class="form-label" for="address">address : </label>
                            <input class="form-control" type="text" name="campground[address]" id="address" value="<%= campground.address %>" required>
                            <div class="valid-feedback">
                                <span>ok! ( 有效 ) </span>
                            </div>
                            <div class="invalid-feedback">
                                <span>Please provide an address.<br>請輸入地址</span>
                            </div>
                        </div>
        
                        <div class="mb-3">
                            <label class="form-label" for="price">Campground Price</label>
                            <div class="input-group">
                                <span class="input-group-text" id="price-label">$</span>
                                <input type="text" id="price" class="form-control" placeholder="0.00" name="campground[price]" aria-describedby="price-label" value="<%= campground.price %>" required>
                                <div class="valid-feedback">
                                    <span>ok! ( 有效 ) </span>
                                </div>
                                <div class="invalid-feedback">
                                    <span>Please select a valid price. <br> 請輸入有效的價格</span>
                                </div>
                            </div>
                        </div>
        
                        <div class="mb-3">
                            <label class="form-label" for="description">Description</label>
                            <textarea style="resize:none; min-height:100px" class="form-control" type="text" name="campground[description]" id="description"  required><%= campground.description %></textarea>
                            <div class="valid-feedback">
                                <span>ok! ( 有效 ) </span>
                            </div>
                            <div class="invalid-feedback">
                                <span>Please provide description.<br>請輸入營地介紹</span>
                            </div>
                        </div>
                        <div class="mb-3">
                            <label for="image" class="form-label">Add Images</label>
                            <div>
                                <input class="form-control" type="file" name="image" id="image" multiple>
                            </div>  
                            <div id="file-upload-filename"></div>
                        </div>
        
        
                        <div class="mb-3">
                            <p>Delete Images</p>
                            <div class="row row-cols-1 row-cols-md-4 g-4 mb-3">
                                <% campground.images.forEach(function(img, i){ %>
                                    <div class="col">
                                        <div class="card">
                                            <img src="<%= img.url %>" class="img-thumbnail" alt="">
                                            <div class="card-img-overlay text-end pt-1 pe-2">
                                                <label class="visually-hidden" for="image-<%= i %>">Delete Image</label>
                                                <input type="checkbox" id="img-<%=i%>" name="deleteImages[]" value="<%= img.filename %>">
                                            </div>
                                        </div>
                                    </div>
                                <% }) %> 
                            </div>
                        </div>
                        <div class="mb-3">
                            <button class="btn btn-success">Update Campground</button>
                        </div>
                    </form>
                    <div>
                        <a class="btn btn-outline-danger" href="/campgrounds/<%= campground._id %>">Back to <%= campground.title %></a>
                    </div>

                </div>

            </div>  
            
            

        </div>
    </div>

    <script src="/js/imageUpload.js"></script>

 