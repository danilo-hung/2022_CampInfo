                    <hr class="mt-5">
                    <p class="text-muted">DETAIL INFORMATION : <br> <%= err.stack  %> </p>
                    <hr>
                    <a href="/campgrounds" class="mb-0"> Back to Campgrounds page</a>
                </div>
            </div>
        </div>
    </div>